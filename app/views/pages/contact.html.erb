<div id='edit_modal' class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Edit Contact Info (Editar Información de Contacto)</h4>
      </div>
      <div class="modal-body">
        <form class='form-horizontal'>
          <div class='form-group'>
            <label>Name (Nombre)</label>
            <input class='form-control'>
          </div>
          <div class='form-group'>
            <label>Street (Calle)</label>
            <input class='form-control'>
          </div>
          <div class='form-group'>
            <label>City (Ciudad)</label>
            <input class='form-control'>
          </div>
          <div class='form-group'>
            <label>State (Estado)</label>
            <input class='form-control'>
          </div>
          <div class='form-group'>
            <label>Zip Code (Código Postal)</label>
            <input class='form-control'>
          </div>
          <div class='form-group'>
            <label>Phone Number (Número de Teléfono) </label>
            <input class='form-control'>
          </div>
          <div class='form-group'>
            <label>Email Address (Dirección de Correo Electrónico)</label>
            <input class='form-control'>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close (Cerca)</button>
        <button type="button" class="btn btn-primary">Save changes (Guardar los Cambios)</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

