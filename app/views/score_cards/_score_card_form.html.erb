<div class='panel panel-default'>
  <div class='panel-heading'>
    <div class='panel-title'>
      <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= student.ID_num %>"><%= student.name %></a>
    </div>
  </div>
  <div id="collapse<%= student.ID_num %>" class="panel-collapse collapse">
    <div class='panel-body'>
      <%= form_for current_user.score_cards.build(student_id: student.id) do |f| %>
        <%= f.hidden_field :student_id %>
          <div class='col-md-8 col-md-offset-2'>
            <div class='col-md-2'> <div class='form-group'>
              <%= f.label :engagement, class:'control-label' %>
              <%= f.select :engagement, Array.new(10){ |i| [i+1,i+1] }, {}, class:'form-control' %>
            </div></div>
            
            <div class='col-md-2 col-md-offset-1'><div class='form-group'>
              <%= f.label :preparedness, class:'control-label' %>
              <%= f.select :preparedness, Array.new(10){ |i| [i+1,i+1] }, {}, class:'form-control' %>
            </div></div>
            
            <div class='col-md-2 col-md-offset-1'><div class='form-group'>
              <%= f.label :attention, class:'control-label' %>
              <%= f.select :attention, Array.new(10){ |i| [i+1,i+1] }, {}, class:'form-control' %>
            </div></div>
            
            <div class='col-md-2 col-md-offset-1'><div class='form-group'>
              <%= f.label :overall, class:'control-label' %>
              <%= f.select :overall, Array.new(10){ |i| [i+1,i+1] }, {}, class:'form-control' %>
            </div></div>
            
          </div>

        <div class='col-md-7 col-md-offset-2'>
          <div class='form-group'>
            <%= f.label :note, 'Notes', class:'control-label' %>
            <%= f.text_area :note, class:'form-control' %>
          </div>
        </div>

        <div class='col-md-7 col-md-offset-2'>
        <%= f.submit "Submit", class: "btn btn-large btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>