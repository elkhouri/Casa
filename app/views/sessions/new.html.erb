<% provide(:title, "Sign in") %>
<div class='page-header'>
  <h3>Sign in / Iniciar Sesión</h3>
</div>
<div class='row'>
  <div class="col-sm-4 col-sm-offset-4">
  <%= form_for(:session, url: sessions_path)  do |f| %>

    <div class='form-group'>
      <%= f.label :ID_num, "ID / Número de Identificación", class:"control-label" %>
      <%= f.text_field :ID_num, class: "form-control" %>
    </div>

    <div class='form-group'>
      <%= f.label :password,"Password / Contraseña", class:"control-label" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <%= f.submit "Sign in / Iniciar Sesión", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>

  <p style="text-align:center">New user / Nuevo Usuario ? <br>
  <%= link_to "Sign up now / Registrate Ahora!", signup_path %></p>
  </div>
</div>
