<% provide(:title, "Sign in") %>
<div class='page-header'>
  <h3>Sign in</h3>
</div>
<%= form_for(:session, url: sessions_path, :html => { :class => "form-signin"})  do |f| %>

  <%= f.label :ID_num %>
  <%= f.text_field :ID_num, class: "form-control" %>

  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
<% end %>

<p style="text-align:center">New user? <%= link_to "Sign up now!", signup_path %></p>
