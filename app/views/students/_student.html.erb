<% if current_user.admin? %>
  <li>
  <%= gravatar_for student, size: 52 %>
  <a href='#<%= student.ID_num %>' data-toggle='modal'><%= student.name %></a>
  <% if current_user.admin? && !current_user?(student) %>
    | <%= link_to "delete", student, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
  </li>
  <div class="modal fade" id='<%= student.ID_num %>'>
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title"><%= student.name %></h4>
        </div>
        <div class="modal-body">
          <form class='form-horizontal'>
            <div class='form-group'>
              <label class='control-label col-md-2'>Name</label>
              <div class='col-md-10'>
                <input class='form-control' value='<%= student.name %>'></input>
              </div>
            </div>
            <div class='form-group'>
              <label class='control-label col-md-2'>ID</label>
              <div class='col-md-10'>
                <input class='form-control' value='<%= student.ID_num %>'></input>
              </div>
            </div>
            <div class='form-group'>
              <label class='control-label col-md-2'>Grade</label>
              <div class='col-md-10'>
                <input class='form-control' value='<%= student.grade %>'></input>
              </div>
            </div>
            <div class='form-group'>
              <label class='control-label col-md-2'>Phone</label>
              <div class='col-md-10'>
                <input class='form-control' value='<%= student.phone  %>'></input>
              </div>
            </div>
            <div class='form-group'>
              <label class='control-label col-md-2'>Email</label>
              <div class='col-md-10'>
                <input class='form-control' value='<%= student.email %>'></input>
              </div>
            </div>
            <div class='form-group'>
              <label class='control-label col-md-2'>Address</label>
              <div class='col-md-10'>
                <input class='form-control' value='<%= student.address  %>'></input>
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
  
<% else %>
<div class='col-sm-3'>
    <%= gravatar_thumbnail student, size:300 %>
    <div class='caption text-center'>
      <h3><%= student.name %></h3>
        <button name='signin_button' class="btn btn-primary">Check in</button>
        <button name='signout_button' class="btn btn-warning">Check out</button>
    </div>
</div>
<% end %>